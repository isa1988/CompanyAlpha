@model WebCompanyAlpha.Models.ArreyOfModel
@using WebCompanyAlpha.Models;

@{
    var grid = new WebGrid(source: Model.UserModels, rowsPerPage: 50);
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="form-group">
@grid.GetHtml(
    htmlAttributes: new
    {
        id = "grid",
        @class = "table table-bordered table-striped table-condensed table-hover"
    },
    emptyRowCellValue: "No Records Found",
    headerStyle: "grid-header",

    columns: grid.Columns(
        grid.Column(columnName: "Login", header: "Логин"),
        grid.Column(columnName: "SurName", header: "Фамилия"),
        grid.Column(columnName: "Name", header: "Имя"),
        grid.Column(columnName: "MiddleName", header: "Отчество"),
        grid.Column(columnName: "RoleNane", header: "Роль"),

        grid.Column(columnName: "Роль", format: (item) => new
            HtmlString(Html.ActionLink("Изменить", "ChangeRole", new { id = item.ID },
                new { @class = "btn btn-info" }).ToString())),

        grid.Column(columnName: "Пароль", format: (item) => new
            HtmlString(Html.ActionLink("Обнулить", "PasswordReset", new { id = item.ID },
                new { @class = "btn btn-info" }).ToString())),

        grid.Column(format: (item) => new
            HtmlString(Html.ImageActionLink(" ", "Delete", "Account", new { id = item.ID },
                null, "~/Content/Image/delete.jpg").ToString()))
        )
    )

    @Html.ActionLink("Дабавить нового пользователя", "Register", null, new {@class = "btn btn-success"})
</div>