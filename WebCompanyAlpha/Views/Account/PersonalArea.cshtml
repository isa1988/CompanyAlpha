@model WebCompanyAlpha.Models.Account.UserModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="form-group">
        <div class="col-md-3">
            @if (Model.IsPhoto)
            {
                <img src=@Url.Content("~/Media/" + Model.Login + ".jpg") class="img-fluid img-thumbnail imgSmall" />
