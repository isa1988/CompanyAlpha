@model WebCompanyAlpha.Models.ArreyOfModel
@using WebCompanyAlpha.Helper;

@{
    var grid = new WebGrid(source: Model.RoomModels, rowsPerPage: 50);
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="form-group">
    <h4>@Model.Title</h4>
    @grid.GetHtml(
        htmlAttributes: new
        {
            id = "grid",
            @class = "table table-bordered table-striped table-condensed table-hover"
        },
        emptyRowCellValue: "No Records Found",
        headerStyle: "grid-header",

        columns: grid.Columns(
            grid.Column(columnName: "Name", header: "Наименование"),
            grid.Column(columnName: "SeatsCount", header: "Количество кресел"),
            grid.Column(columnName: "IsProjector", header: "Наличие проектора"),
            grid.Column(columnName: "IsMarkerBoard", header: "Наличие маркерной доски"),
            grid.Column(columnName: "IsBlock", header: "Комната недоступна"),
            grid.Column(format: (item) => new
                HtmlString(Html.ImageActionLink(" ", "Edit", "Room", new {id = item.ID},
                    null, "~/Content/Image/edit.jpg").ToString())),
            grid.Column(format: (item) => new
                HtmlString(Html.ImageActionLink(" ", "Delete", "Room", new { id = item.ID },
                    null, "~/Content/Image/delete.jpg").ToString()))
            
            )
        )

    @Html.ActionLink("Дабавить новую", "Insert", null, new {@class = "btn btn-success"})

</div>